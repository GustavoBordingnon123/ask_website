<%- include ("partials/header.ejs") %>
<body>
    <%- include ("partials/navbar.ejs") %>
    <div class="container">
        <hr>
        <h1>Questions</h1>
        <hr>
        <a href="/ask_questions" class="btn btn-danger">Ask your questions</a>
        <hr>
        <% questions.forEach(question => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= question.title %></h3>
                </div>
            
                <div class="card-footer">
                    <a href="./question/<%= question.id %>"><button class="btn btn-danger">Answer</button></a>
                </div>
            </div>
        <% }) %>

    </div>

</body>
<%- include ("partials/footer.ejs") %>
</html>